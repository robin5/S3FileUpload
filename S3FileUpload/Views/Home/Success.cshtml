@{
    ViewData["Title"] = "Upload Success";
}

<div class="text-center">
    <h1 class="display-4">File upload successful!</h1>
    <p>@Html.ActionLink("Upload another file", "Index", "Home")</p>
    @{
        Microsoft.Extensions.Primitives.StringValues presignedURL;
        Microsoft.Extensions.Primitives.StringValues fileName;

        if (Context.Request.Query.TryGetValue("presigned", out presignedURL) &&
            Context.Request.Query.TryGetValue("filename", out fileName))
        {
            <a href=@presignedURL>@fileName</a>
        }
    }
</div>

